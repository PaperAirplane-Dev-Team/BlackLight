<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:background="?attr/DrawerBackground">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="20dp"
		android:paddingTop="40dp"
		android:paddingRight="20dp"
		android:gravity="left"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/drawer_home"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:clickable="true"
			android:gravity="center_vertical"
			android:background="@drawable/drawer_selector"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/drawer_home_icon"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:scaleType="fitXY"
				android:src="@drawable/ic_drawer_home"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:text="@string/drawer_home"
				android:textSize="16sp"
				android:textColor="?attr/DrawerForeground"/>
			
		</LinearLayout>

		<LinearLayout
			android:id="@+id/drawer_at"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginTop="8dp"
			android:clickable="true"
			android:gravity="center_vertical"
			android:background="@drawable/drawer_selector"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/drawer_at_icon"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:scaleType="fitXY"
				android:src="@drawable/ic_drawer_at"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:text="@string/drawer_at"
				android:textSize="16sp"
				android:textColor="?attr/DrawerForeground"/>
			
		</LinearLayout>

		<LinearLayout
			android:id="@+id/drawer_comment"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginTop="8dp"
			android:clickable="true"
			android:gravity="center_vertical"
			android:background="@drawable/drawer_selector"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/drawer_comment_icon"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:scaleType="fitXY"
				android:src="@drawable/ic_drawer_comment"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:text="@string/drawer_comments"
				android:textSize="16sp"
				android:textColor="?attr/DrawerForeground"/>
			
		</LinearLayout>

		<LinearLayout
			android:id="@+id/drawer_dm"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginTop="8dp"
			android:clickable="true"
			android:gravity="center_vertical"
			android:background="@drawable/drawer_selector"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/drawer_dm_icon"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:scaleType="fitXY"
				android:src="@drawable/ic_drawer_pm"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:text="@string/drawer_dm"
				android:textSize="16sp"
				android:textColor="?attr/DrawerForeground"/>
			
		</LinearLayout>

		<LinearLayout
			android:id="@+id/drawer_fav"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginTop="8dp"
			android:clickable="true"
			android:gravity="center_vertical"
			android:background="@drawable/drawer_selector"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/drawer_fav_icon"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:scaleType="fitXY"
				android:src="@drawable/ic_drawer_fav"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:text="@string/drawer_fav"
				android:textSize="16sp"
				android:textColor="?attr/DrawerForeground"/>
			
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/drawer_settings"
			android:layout_width="match_parent"
			android:layout_height="36dp"
			android:layout_marginTop="8dp"
			android:clickable="true"
			android:gravity="center_vertical"
			android:background="@drawable/drawer_selector"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/drawer_settings_icon"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:scaleType="fitXY"
				android:src="@drawable/ic_drawer_set"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:text="@string/drawer_settings"
				android:textSize="16sp"
				android:textColor="?attr/DrawerForeground"/>
			
		</LinearLayout>

	</LinearLayout>

</ScrollView>

