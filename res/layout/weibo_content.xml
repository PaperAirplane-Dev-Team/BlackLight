	<TextView
		android:layout_height="wrap_content"
		android:text="Author Name"
		android:textSize="14.5sp"
		android:layout_width="wrap_content"
		android:textStyle="bold"
		android:textColor="?attr/CardForeground"
		android:id="@+id/weibo_name"
